<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#616161">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_stories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        app:cardBackgroundColor="@color/md_black_1000"
        app:cardCornerRadius="6dp"
        app:cardElevation="6dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple">

            <ImageView
                android:id="@+id/iv_stories_person_icon"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:transitionName="icon" />

            <TextView
                android:id="@+id/tv_stories_person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/iv_stories_person_icon"
                android:layout_toRightOf="@+id/iv_stories_person_icon"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingStart="16dp"
                android:textColor="@color/md_white_1000"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/tv_stories_story"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_stories_person_icon"
                android:layout_centerHorizontal="true"
                android:paddingTop="8dp"
                android:text=""
                android:textColor="@color/md_white_1000" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</GridLayout>

